<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-4.1.xsd
						http://www.springframework.org/schema/aop
           				http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
           				http://www.springframework.org/schema/tx 
           				http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean" scope="singleton">
		<property name="jndiName">
			<value>java:comp/env/jdbc/test</value>
		</property>
	</bean>

	<bean id="txManager" class="org.springframework.transaction.jta.JtaTransactionManager" scope="singleton">
		<property name="transactionManagerName">
			<value>java:comp/UserTransaction</value>
		</property>
	</bean>

	<bean id="myClass" class="com.successfactors.I311616.MyClass" scope="singleton">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="txManager">
			<ref bean="txManager" />
		</property>
	</bean>
	
	<tx:annotation-driven transaction-manager="txManager" />
</beans>